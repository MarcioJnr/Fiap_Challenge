@page "{id:int}"
@model FiapChallenge.Web.Pages.Alunos.EditModel
@{
    ViewData["Title"] = "Editar Aluno";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Editar Aluno</h1>
        <a asp-page="Index" class="text-blue-600 hover:text-blue-800 text-sm">← Voltar para lista</a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    <div class="bg-white shadow-md rounded-lg p-6">
        <form method="post">
            <input type="hidden" asp-for="Aluno.Id" />
            <input type="hidden" asp-for="Aluno.Cpf" />

            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"></div>

            <div class="mb-4">
                <label asp-for="Aluno.Nome" class="block text-gray-700 text-sm font-bold mb-2">Nome Completo</label>
                <input asp-for="Aluno.Nome" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="Aluno.Nome" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Aluno.Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input asp-for="Aluno.Email" type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="Aluno.Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Removed 5 years minimum age requirement and updated date validation -->
            <div class="mb-6">
                <label asp-for="Aluno.DataNascimento" class="block text-gray-700 text-sm font-bold mb-2">Data de Nascimento</label>
                <input asp-for="Aluno.DataNascimento" type="date"
                       min="1900-01-01"
                       max="@DateTime.Now.ToString("yyyy-MM-dd")"
                       class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <p class="text-gray-600 text-xs mt-1">Data deve estar entre 01/01/1900 e hoje</p>
                <span asp-validation-for="Aluno.DataNascimento" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition duration-200">
                    Salvar Alterações
                </button>
                <a asp-page="Index" class="text-gray-600 hover:text-gray-800">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
