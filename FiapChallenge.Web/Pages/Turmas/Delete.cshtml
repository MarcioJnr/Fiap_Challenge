@page "{id:int}"
@model FiapChallenge.Web.Pages.Turmas.DeleteModel
@{
    ViewData["Title"] = "Excluir Turma";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Excluir Turma</h1>
        <a asp-page="Index" class="text-green-600 hover:text-green-800 text-sm">← Voltar para lista</a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
            <p class="text-yellow-700 font-semibold">Atenção! Esta ação não pode ser desfeita.</p>
        </div>

        @if (Model.Turma != null)
        {
            <dl class="grid grid-cols-1 gap-4 mb-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Nome</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Turma.Nome</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Descrição</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Turma.Descricao</dd>
                </div>
            </dl>

            <form method="post">
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition duration-200">
                        Confirmar Exclusão
                    </button>
                    <a asp-page="Index" class="text-gray-600 hover:text-gray-800">Cancelar</a>
                </div>
            </form>
        }
    </div>
</div>
