@page
@model FiapChallenge.Web.Pages.Turmas.IndexModel
@{
    ViewData["Title"] = "Turmas";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Gerenciar Turmas</h1>
        <a asp-page="Create" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
            Nova Turma
        </a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Turmas != null && Model.Turmas.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var turma in Model.Turmas)
            {
                <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition duration-200">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">@turma.Nome</h3>
                    <p class="text-gray-600 mb-4">@turma.Descricao</p>
                    <div class="flex justify-between items-center">
                        <a asp-page="Edit" asp-route-id="@turma.Id" class="text-blue-600 hover:text-blue-900 font-semibold">Editar</a>
                        <a asp-page="Delete" asp-route-id="@turma.Id" class="text-red-600 hover:text-red-900 font-semibold">Excluir</a>
                    </div>
                </div>
            }
        </div>

        @* Added pagination controls *@
        @if (Model.TotalPages > 1)
        {
            <div class="flex justify-between items-center mt-6">
                <div class="text-sm text-gray-700">
                    Mostrando página <span class="font-semibold">@Model.CurrentPage</span> de <span class="font-semibold">@Model.TotalPages</span>
                    (Total: <span class="font-semibold">@Model.TotalCount</span> turmas)
                </div>
                <div class="flex gap-2">
                    @if (Model.CurrentPage > 1)
                    {
                        <a asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)"
                           class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded transition">
                            ← Anterior
                        </a>
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)"
                           class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded transition">
                            Próxima →
                        </a>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="bg-gray-100 border border-gray-300 text-gray-700 px-4 py-8 rounded text-center">
            <p class="text-lg">Nenhuma turma cadastrada.</p>
            <a asp-page="Create" class="text-green-600 hover:text-green-800 font-semibold mt-2 inline-block">Cadastrar primeira turma</a>
        </div>
    }
</div>
