@page
@model FiapChallenge.Web.Pages.Matriculas.DeleteModel
@{
    ViewData["Title"] = "Remover Matrícula";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Confirmar Remoção de Matrícula</h1>

        @if (Model.ErrorMessage != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                @Model.ErrorMessage
            </div>
        }

        @if (Model.Matricula != null)
        {
            <div class="bg-white shadow-md rounded-lg p-6 mb-6">
                <div class="mb-4">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Detalhes da Matrícula</h3>
                    <div class="space-y-2">
                        <p class="text-gray-600">
                            <span class="font-semibold">Aluno:</span> @Model.Matricula.NomeAluno
                        </p>
                        <p class="text-gray-600">
                            <span class="font-semibold">Turma:</span> @Model.Matricula.NomeTurma
                        </p>
                        <p class="text-gray-600">
                            <span class="font-semibold">Data da Matrícula:</span> @Model.Matricula.DataMatricula.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                </div>

                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                <strong>Atenção:</strong> Esta ação não pode ser desfeita. O aluno será removido desta turma permanentemente.
                            </p>
                        </div>
                    </div>
                </div>

                <form method="post" asp-route-id="@Model.Matricula.Id">
                    <div class="flex gap-4">
                        <button type="submit"
                                class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200">
                            Confirmar Remoção
                        </button>
                        <a asp-page="Index"
                           class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-3 px-6 rounded-lg transition duration-200 text-center">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="bg-gray-100 border border-gray-300 text-gray-700 px-4 py-8 rounded text-center">
                <p class="text-lg">Matrícula não encontrada.</p>
                <a asp-page="Index" class="text-purple-600 hover:text-purple-800 font-semibold mt-2 inline-block">Voltar para lista</a>
            </div>
        }
    </div>
</div>
