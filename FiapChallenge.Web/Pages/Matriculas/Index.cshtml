@page
@model FiapChallenge.Web.Pages.Matriculas.IndexModel
@{
    ViewData["Title"] = "Matrículas";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Gerenciar Matrículas</h1>
            <p class="text-gray-600 mt-2">Visualize as turmas e seus alunos matriculados</p>
        </div>
        <a asp-page="Create" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200">
            Nova Matrícula
        </a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.TurmasComAlunos != null && Model.TurmasComAlunos.Any())
    {
        <div class="space-y-6">
            @foreach (var turma in Model.TurmasComAlunos)
            {
                <div class="bg-white shadow-md rounded-lg overflow-hidden border-l-4 border-purple-600">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <div class="flex justify-between items-center">
                            <div>
                                <h3 class="text-xl font-bold text-gray-800">@turma.Nome</h3>
                                @if (!string.IsNullOrEmpty(turma.Descricao))
                                {
                                    <p class="text-gray-600 text-sm mt-1">@turma.Descricao</p>
                                }
                            </div>
                            <div class="flex items-center gap-3">
                                <span class="bg-purple-100 text-purple-800 text-sm font-semibold px-3 py-1 rounded">
                                    @turma.Alunos.Count aluno(s)
                                </span>
                                <a asp-page="Create" asp-route-turmaId="@turma.Id"
                                   class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition">
                                    + Matricular Aluno
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="px-6 py-4">
                        @if (turma.Alunos.Any())
                        {
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Aluno</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Data Matrícula</th>
                                        <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Ações</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var aluno in turma.Alunos)
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-4 py-3 text-sm text-gray-900">@aluno.NomeAluno</td>
                                            <td class="px-4 py-3 text-sm text-gray-500">@aluno.DataMatricula.ToString("dd/MM/yyyy")</td>
                                            <td class="px-4 py-3 text-right text-sm">
                                                <a asp-page="Delete" asp-route-id="@aluno.MatriculaId"
                                                   class="text-red-600 hover:text-red-900 font-semibold">
                                                    Remover
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-8 text-gray-500">
                                <p>Nenhum aluno matriculado nesta turma.</p>
                                <a asp-page="Create" asp-route-turmaId="@turma.Id"
                                   class="text-purple-600 hover:text-purple-800 font-semibold mt-2 inline-block">
                                    Matricular primeiro aluno
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-gray-100 border border-gray-300 text-gray-700 px-4 py-8 rounded text-center">
            <p class="text-lg">Nenhuma turma cadastrada.</p>
            <p class="text-sm text-gray-600 mt-2">Você precisa criar turmas antes de matricular alunos.</p>
            <a asp-page="/Turmas/Create" class="text-purple-600 hover:text-purple-800 font-semibold mt-2 inline-block">Cadastrar primeira turma</a>
        </div>
    }
</div>
