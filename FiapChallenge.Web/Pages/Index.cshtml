@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Replaced Bootstrap with Tailwind CSS classes -->
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Dashboard - FIAP Challenge</h1>
        <p class="text-xl text-gray-600">Bem-vindo, <strong class="text-purple-600">@Model.UserEmail</strong>!</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
        <!-- Card Alunos -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white transform hover:scale-105 transition duration-200">
            <div class="flex items-center justify-between mb-4">
                <h5 class="text-2xl font-bold">Alunos</h5>
                <svg class="w-12 h-12 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </div>
            <p class="mb-4 text-blue-100">Gerenciar cadastro de alunos</p>
            <a href="/Alunos" class="inline-block bg-white text-blue-600 font-semibold py-2 px-6 rounded-lg hover:bg-blue-50 transition">
                Acessar
            </a>
        </div>

        <!-- Card Turmas -->
        <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white transform hover:scale-105 transition duration-200">
            <div class="flex items-center justify-between mb-4">
                <h5 class="text-2xl font-bold">Turmas</h5>
                <svg class="w-12 h-12 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
            </div>
            <p class="mb-4 text-green-100">Gerenciar turmas disponíveis</p>
            <a href="/Turmas" class="inline-block bg-white text-green-600 font-semibold py-2 px-6 rounded-lg hover:bg-green-50 transition">
                Acessar
            </a>
        </div>

        <!-- Card Matrículas -->
        <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-6 text-white transform hover:scale-105 transition duration-200">
            <div class="flex items-center justify-between mb-4">
                <h5 class="text-2xl font-bold">Matrículas</h5>
                <svg class="w-12 h-12 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
            </div>
            <p class="mb-4 text-purple-100">Gerenciar matrículas de alunos</p>
            <a href="/Matriculas" class="inline-block bg-white text-purple-600 font-semibold py-2 px-6 rounded-lg hover:bg-purple-50 transition">
                Acessar
            </a>
        </div>
    </div>
</div>
